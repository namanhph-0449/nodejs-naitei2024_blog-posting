<div class="container mt-4">
    {{#if post}}
        <div class="post-detail">
            <h1>{{ post.title }}</h1>
            <p class="text-muted">Posted by {{ post.user.username }} on {{ post.createdAt }}</p>

            <div class="post-content">
                {{{ post.content }}}
            </div>
            
            {{#if post.tags.length}}
            <div class="post-tags mt-3">
                <strong>Tags:</strong>
                <ul class="list-inline">
                    {{#each post.tags}}
                        <li class="list-inline-item">
                            <a href="/posts/tag/{{ this.id }}" class="badge badge-primary">{{ this.name }}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}

            {{#if isOwner}}
                <a href="/posts/edit/{{post.postId}}" class="btn btn-secondary">Edit</a>
            {{/if}}
        </div>

        {{!-- <hr> --}}

        {{!-- {{#if post.comments.length}}
            <div class="post-comments mt-4">
                <h2>Comments</h2>
                <ul class="list-group">
                    {{#each post.comments}}
                        <li class="list-group-item">
                            <strong>{{ this.user.username }}</strong> 
                            <span class="text-muted">on {{ this.createdAt }}</span>
                            <p>{{ this.content }}</p>
                        </li>
                    {{/each}}
                </ul>
            </div>
        {{else}}
            <p>No comments yet. Be the first to comment!</p>
        {{/if}} --}}

        {{!-- <hr> --}}

        <!-- Add a comment -->
        {{!-- <div class="add-comment mt-4">
            <h2>Add a comment</h2>
            <form action="/posts/{{ post.postId }}/comment" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="content" rows="3" placeholder="Enter your comment" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
        </div> --}}

    {{else}}
        <p>{{ t 'error.postNotFound' }}</p>
    {{/if}}
</div>

<style>
    /* public/stylesheets/custom.css */

/* General Layout */
.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

/* Post Title */
.post-detail h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: 700;
    color: #333;
}

/* Post Metadata */
.post-detail .text-muted {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 20px;
}

/* Post Content */
.post-detail .post-content {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #444;
    margin-bottom: 30px;
}

/* Tags */
.post-tags {
    margin-top: 20px;
}

.post-tags strong {
    font-size: 1rem;
    color: #555;
}

.post-tags .list-inline-item a {
    font-size: 0.9rem;
    color: #007bff;
    text-decoration: none;
}

.post-tags .list-inline-item a:hover {
    text-decoration: underline;
}

/* Comments Section */
.post-comments h2,
.add-comment h2 {
    font-size: 1.5rem;
    margin-bottom: 15px;
    color: #333;
}

.post-comments .list-group-item {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    margin-bottom: 10px;
    padding: 15px;
}

.post-comments .list-group-item strong {
    color: #007bff;
    font-size: 1rem;
}

.post-comments .list-group-item p {
    font-size: 1rem;
    color: #555;
    margin: 10px 0 0;
}

/* Add Comment Section */
.add-comment .form-group textarea {
    font-size: 1rem;
    padding: 10px;
}

.add-comment .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.add-comment .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
}

</style>
